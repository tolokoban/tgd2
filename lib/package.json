{
    "name": "@tolokoban/tgd",
    "version": "2.0.46",
    "description": "ToloGameDev library for WebGL2",
    "main": "./dist/index.js",
    "typings": "./dist/index.d.ts",
    "scripts": {
        "doc": "typedoc",
        "build": "build-typescript-library --allow-circular .",
        "build:only": "build-typescript-library --allow-circular .",
        "postbuild": "npm run doc",
        "lint": "eslint -c eslint.config.mjs './src/**/*.ts'",
        "lint:fix": "eslint -c eslint.config.mjs --fix './src/**/*.ts'",
        "start": "build-typescript-library --allow-circular --watch .",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tolokoban/tgd2.git"
    },
    "keywords": [
        "WebGL2",
        "game",
        "framework",
        "tolokoban"
    ],
    "author": "Tolokoban",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/tolokoban/tgd2/issues"
    },
    "homepage": "https://tolokoban.github.io/tgd2",
    "devDependencies": {
        "@eslint/js": "^9.28.0",
        "@jest/globals": "^30.0.0",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.0.1",
        "@typescript-eslint/eslint-plugin": "^8.26.0",
        "build-typescript-library": "^0.8.2",
        "eslint": "^9.21.0",
        "eslint-plugin-unicorn": "^61.0.2",
        "jest-canvas-mock": "^2.5.2",
        "jest-environment-jsdom": "^30.0.0",
        "lefthook": "^1.11.14",
        "prettier": "^3.6.2",
        "ts-jest": "^29.2.6",
        "typedoc": "^0.28.5",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.34.0"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 3 chrome version",
            "last 3 firefox version",
            "last 3 safari version"
        ]
    },
    "dependencies": {
        "@loaders.gl/core": "^4.3.4",
        "@loaders.gl/draco": "^4.3.4",
        "@loaders.gl/gltf": "^4.3.4",
        "gl-matrix": "^3.4.3",
        "tslib": "^2.8.1"
    }
}

{
    "name": "@tolokoban/tgd",
    "version": "2.0.3",
    "description": "ToloGameDev library for WebGL2",
    "main": "./dist/index.js",
    "typings": "./dist/index.d.ts",
    "scripts": {
        "doc": "typedoc",
        "build": "build-typescript-library .",
        "lint": "eslint -c .eslintrc.yml 'src/**/*.ts'",
        "lint:fix": "eslint -c .eslintrc.yml --fix 'src/**/*.ts'",
        "start": "build-typescript-library --watch --runAfter doc .",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tolokoban/tgd2.git"
    },
    "keywords": [
        "WebGL2",
        "game",
        "framework"
    ],
    "author": "Tolokoban",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/tolokoban/tgd2/issues"
    },
    "homepage": "https://tolokoban.github.io/tgd2",
    "devDependencies": {
        "@types/gl-matrix": "^3.2.0",
        "@types/jest": "^29.5.12",
        "@typescript-eslint/eslint-plugin": "^7.9.0",
        "build-typescript-library": "^0.7.3",
        "eslint": "^8.57.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jsdoc": "^48.2.4",
        "eslint-plugin-no-null": "^1.0.2",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-unicorn": "^53.0.0",
        "ts-jest": "^29.1.2",
        "typedoc": "^0.25.13",
        "typescript": "^5.4.5"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 3 chrome version",
            "last 3 firefox version",
            "last 3 safari version"
        ]
    },
    "dependencies": {
        "tslib": "^2.6.2"
    }
